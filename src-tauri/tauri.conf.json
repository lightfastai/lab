{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Code",
  "version": "0.1.0",
  "identifier": "ai.lightfast.claudecode",
  "build": {
    "frontendDist": "../out",
    "beforeBuildCommand": "pnpm next:build",
    "beforeDevCommand": "pnpm next:dev",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Claude Code - Lightfast Lab",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
